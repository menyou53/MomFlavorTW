<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tku.musicplatform.com.example.youmen.musicplatform.MainActivity">

    <TextView
        android:id="@+id/txtRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="點選錄音檔即可撥放"
        android:textSize="30sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imgRecord"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtRec"
        app:srcCompat="@android:drawable/radiobutton_on_background"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRec" />

    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imgRecord"
        android:layout_toRightOf="@+id/imgRecord"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRec"
        app:layout_constraintLeft_toRightOf="@+id/imgRecord"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/imgStop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imgRecord"
        android:layout_toRightOf="@+id/imgPlay"
        app:srcCompat="@android:drawable/checkbox_off_background"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRec"
        app:layout_constraintLeft_toRightOf="@+id/imgPlay"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/imgEnd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/imgRecord"
        android:layout_toRightOf="@+id/imgStop"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtRec"
        app:layout_constraintLeft_toRightOf="@+id/imgStop"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txtList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgEnd"
        android:text="錄音檔清單："
        android:textSize="30dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgPlay" />

    <ListView
        android:id="@+id/lstRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtList"
        android:layout_marginTop="-68dp"
        app:layout_constraintTop_toBottomOf="@+id/txtList"
        android:layout_marginLeft="-263dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/toRemix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="前往合音"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/imgEnd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRec" />

</android.support.constraint.ConstraintLayout>
