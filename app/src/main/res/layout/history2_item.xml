<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_history2"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="0dp"
    app:cardCornerRadius="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_view_history2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/History2CardTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="name"
            app:layout_constraintStart_toEndOf="@+id/image_view_history2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/History2CardText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:text="數量"
            app:layout_constraintStart_toEndOf="@+id/image_view_history2"
            app:layout_constraintTop_toBottomOf="@+id/History2CardTextName" />

        <TextView
            android:id="@+id/History2CardTextNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:text="num"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/History2CardTextName" />

        <TextView
            android:id="@+id/History2CardText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:text="價格"
            app:layout_constraintStart_toEndOf="@+id/image_view_history2"
            app:layout_constraintTop_toBottomOf="@+id/History2CardText2" />

        <TextView
            android:id="@+id/History2CardTextPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:text="price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/History2CardTextNum" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
